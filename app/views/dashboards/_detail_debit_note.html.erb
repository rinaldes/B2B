
<div class="row-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div id="table">
        <div class="space"></div>
        <div class="row-fluid" id="grn-details-for">
          <div class="widget-header">
            <h5>Line Details</h5>
          </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th class="center">Transaction Date</th>
                <th class="center">Branch</th>
                <th class="center">Order No</th>
                <th class="center">BO Suffix</th>
                <th class="center">Type</th>
                <th class="center">Invoice</th>
                <th class="center">Ref</th>
                <th class="center">Details</th>
                <th class="center">Amount</th>
                <th class="center">Batch</th>
              </tr>
            </thead>
            <tbody>
              <% if details %>
                <% details.each do |dn|%>
                  <tr>
                    <td><%= dn.transaction_date %></td>
                    <td><%= dn.branch_number %></td>
                    <td><%= dn.order_number %></td>
                    <td><%= dn.suffix %></td>
                    <td><%= dn.trans_type %></td>
                    <td><%= convert_date(dn.invoice_date) %></td>
                    <td><%= dn.reference %></td>
                    <td><%= dn.details %></td>
                    <td class="text-right"><%= total_format(dn.amount.abs,"Rp.") %></td>
                    <td><%= dn.batch %></td>
                  </tr>
                <%end%>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

