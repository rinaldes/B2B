            <%= link_to "#{new_grn_today[:read]} Read",
              order_to_payments_goods_receive_notes_url("search"=>{field: "Status", detail: "read", "read"=>"on", "period_1"=>Time.now.strftime('%d/%m/%Y'), "period_2"=>Time.now.strftime('%d/%m/%Y')}),
              style: 'text-decoration:none;' %><br/>
            <%= link_to "#{new_grn_today[:dispute]} Dispute",
              order_to_payments_goods_receive_notes_url("search"=>{field: "Status", detail: "dispute", "dispute"=>"on", "period_1"=>Time.now.strftime('%d/%m/%Y'), "period_2"=>Time.now.strftime('%d/%m/%Y')}),
