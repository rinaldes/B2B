<%= javascript_include_tag "order_to_payments/purchase_orders.js" %>
  <div class="row-fluid">
    <div class="space-6"></div>
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box transparent invoice-box">
          <div class="widget-body">
            <div class="widget-main padding-24">
                <div class="row-fluid">
                  <div class="span6">
                    <div class="row-fluid">
                      <ul class="unstyled spaced">
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>PO Number</span>
                          : <%=@po.po_number%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Warehouse</span>
                          : <%=@po.warehouse.warehouse_name%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Ship To</span>
                          <%= get_addresses(@po.warehouse)%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Order Type</span>
                          : <%=@po.order_type%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Officer</span>
                          : <%=@po.user_name%>
                        </li>
                      </ul>
                    </div>
                  </div><!--/span-->
                  <div class="span6">
                    <div class="row-fluid">
                      <ul class="unstyled spaced">
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Supplier Code</span>
                          : <%=@po.supplier.code%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Supplier Name</span>
                          : <%=@po.supplier.name%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Phone Number</span>
                          : <%=@po.supplier.phone_number%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Ordered</span>
                          : <%=convert_date(@po.po_date)%>
                        </li>

                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Arrival</span>
                          : <%=convert_date(@po.due_date)%>
                        </li>

                      </ul>
                    </div>
                  </div><!--/span-->
                </div><!--row-->
              <div class="space"></div>
            <div id="products-po">
              <%= render 'detail_order', :details => @details %>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
