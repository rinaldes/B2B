<%= javascript_include_tag "order_to_payments/purchase_orders.js" %>
<%= javascript_include_tag "spin.min.js" %>
<div class="row-fluid">
  <div class="space-6"></div>
  <div class="row-fluid">
    <div class="span12">
      <%= render 'filter_and_search_table_report' %>
      <% if params[:search][:order_type] == "purchase_orders" %>
        <div id="table"><%= render "results_report", :ot => "purchase_orders", :results => @results %></div>
      <% elsif params[:search][:order_type] == "goods_receive_notes" %>
        <div id="table"><%= render "results_report", :ot => "goods_receive_notes", :results => @results %></div>
      <% elsif params[:search][:order_type] == "goods_receive_price_confirmations" %>
        <div id="table"><%= render "results_report", :ot => "goods_receive_price_confirmations", :results => @results %></div>
      <% elsif params[:search][:order_type] == "invoices" %>
        <div id="table"><%= render "results_report", :ot => "invoices", :results => @results %></div>
      <% elsif params[:search][:order_type] == "goods_return_note" %>
        <div id="table"><%= render "results_report", :ot => "goods_return_note", :results => @results %></div>
      <% elsif params[:search][:order_type] == "debit_notes" %>
        <div id="table"><%= render "results_debitnote", :ot => "debit_notes", :results => @results %></div>
      <% end %>
    </div>
  </div>
</div><!--/row-->