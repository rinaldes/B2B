<div class="row-fluid">
  <div class="space-6"></div>
  <div class="row-fluid">
    <div class="span12">
      <%= render 'shared/filter_and_search_table'%>
      <div id="table_report_wrapper" class="dataTables_wrapper"role="grid">
        <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
              <th class="center">
                <%= link_to raw('Title'), 'javascript:void(0)', id: 'notifications.title-desc', class: 'sorting hide' %>
                <%= link_to raw('Title'), 'javascript:void(0)', id: 'notifications.title-asc', class: 'sorting' %>
              </th>
              <th class="center">
                <%= link_to raw('Content'), 'javascript:void(0)', id: 'content-desc', class: 'sorting hide' %>
                <%= link_to raw('Content'), 'javascript:void(0)', id: 'content-asc', class: 'sorting' %>
              </th>
              <% if current_user.has_role?'superadmin' %>
                <th class="center">
                  <%= link_to raw('Receipt'), 'javascript:void(0)', id: 'role_id-desc', class: 'sorting hide' %>
                  <%= link_to raw('Receipt'), 'javascript:void(0)', id: 'role_id-asc', class: 'sorting' %>
                </th>
              <% else %>
                <th class="center">Status</th>
              <% end %>
              <th class="center">
                <%= link_to raw('Created At'), 'javascript:void(0)', id: 'created_at-desc', class: 'sorting hide' %>
                <%= link_to raw('Created At'), 'javascript:void(0)', id: 'created_at-asc', class: 'sorting' %>
              </th>
              <th class="center">
                <%= link_to raw('Valid From'), 'javascript:void(0)', id: 'valid_from-desc', class: 'sorting hide' %>
                <%= link_to raw('Valid From'), 'javascript:void(0)', id: 'valid_from-asc', class: 'sorting' %>
              </th>
              <th class="center">
                <%= link_to raw('Valid Until'), 'javascript:void(0)', id: 'valid_from-desc', class: 'sorting hide' %>
                <%= link_to raw('Valid Until'), 'javascript:void(0)', id: 'valid_from-asc', class: 'sorting' %>
              </th>
              <th class="center">Action</th>
            </tr>
          </thead>
          <tbody id="notification-list"><%=render "results", :results => @results %></tbody>
        </table>
        <%#=render "shared/paginate", :results => @results %>
      </div>
    </div>
  </div>
      <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->