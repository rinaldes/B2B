<div id="accept-dispute">
  <div class="hr hr8 hr-double hr-dotted"></div>
  <div class="row-fluid">
    <div class="span12">
      <h4 class="lighter">
        Remarked
      </h4>
      <p>Delivered quantities are confirmed and signed off for</p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span7 pull-left">
      <%if can?(:get_dispute_debit_note, @debit_note) && !dispute_escalated?(@debit_note, DN, :dn_dispute_flow_selector) %>
      <%= link_to "Raise Quantity Dispute", order_to_payments_new_dispute_dn_path(@debit_note.id), class: "btn btn-info", remote: true %>
      <%end%>
    </div>
  </div>
</div>
