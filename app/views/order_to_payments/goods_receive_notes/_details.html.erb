<div class="row-fluid" id="grn-details-for">
  <div class="widget-header">
    <h5>Line Details</h5>
  </div>
  <table class="table table-striped table-bordered" id="details">
    <thead>
      <tr>
        <th class="center">Seq</th>
        <th class="center">Item Code</th>
        <th class="center">Barcode</th>
        <th class="center">Item Description</th>
        <th class="center">Customer Qty</th>
        <th class="center">Disputed Qty</th>
        <th class="center">UoM</th>
        <th class="center">Remark</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th class="center">Seq</th>
        <th class="center">Item Code</th>
        <th class="center">Barcode</th>
        <th class="center">Item Description</th>
        <th class="center">Customer Qty</th>
        <th class="center">Disputed Qty</th>
        <th class="center">UoM</th>
        <th class="center">Remark</th>
      </tr>
    </tfoot>
    <tbody>
      <% if @details%>
      <%@details.each_with_index do |p,i|%>
      <tr>
        <td>
          <%= p.seq %>
          <%= hidden_field_tag "purchase_order[details_purchase_orders_attributes][#{i}][seq]", p.seq %>
        </td>
        <td><%=p.product.code rescue '' %></td>
        <td><%=p.product.apn_number rescue '' %></td>
        <td><%=p.product.name.html_safe rescue '' %></td>
        <!--td class="text-right"><%#=p.commited_qty.to_i%></td-->
        <td class="text-right">
          <%= hidden_field_tag "purchase_order[details_purchase_orders_attributes][#{i}][received_qty]", p.received_qty.to_i %>
          <%=p.received_qty.to_i%>
        </td>
        <td class="text-right">
          <%= p.dispute_qty.to_i %>
          <%= hidden_field_tag "purchase_order[details_purchase_orders_attributes][#{i}][dispute_qty]", p.dispute_qty.to_i %>
        </td>
        <td class="text-right"><%=p.product.unit_qty rescue ''%></td>
        <td>
          <%= p.remark.blank?? "-OK-" : p.remark %>
          <%= hidden_field_tag "purchase_order[details_purchase_orders_attributes][#{i}][remark]", p.remark %>
        </td>
      </tr>
      <%end%>
      <%end%>
    </tbody>
  </table>
</div>

<div class="hr hr8 hr-double hr-dotted"></div>
<div class="row-fluid">
  <div class="row-fluid" id="grn-details-for">
    <div class="widget-header">
      <h5>Remark Details</h5>
    </div>
    <%= render 'show_remark' %>
  </div>
</div>
