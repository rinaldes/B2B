<%if inv.inv_printed? && can?(:respond_to_inv, inv)%>
  <div class="control-group">
    <label class="control-label text-left">Remark</label>
    <div class="controls">
      <%= f.text_area :po_remark, :rows=>"4", class: "span5"%>
      <span id='po_remark'></span>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span7 pull-left">
      <%= hidden_field_tag :commit %>
      <%= link_to 'Receive', 'javascript:void(0)', :class => "btn btn-info", :onclick => "return receiving_invoice()" %>
    </div>
  </div>
<%end%>
