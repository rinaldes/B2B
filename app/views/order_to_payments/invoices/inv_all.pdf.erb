<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      INVOICES <br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %> ( Tanggal : <%= Time.new.strftime("%d-%m-%Y %H:%M:%S") %>)
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <table style="" cellspacing="0" cellpadding="0" >
                  <thead>
                    <tr>
                      <th>PO Number</th>
                      <th>Invoice Number</th>
                      <th>Payment Invoice Due Date</th>
                      <th>Status</th>
                      <th>Remark</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @results.each_with_index do |det, i| %>
                      <tr style="background: silver;">
                        <td><%= det.po_number rescue '' %></td>
                        <td><%= det.invoice_number %></td>
                        <td><%= convert_date(det.payment_invoice_due_date) %></td>
                        <td><%= unlock_inv?(det) %></td>
                        <td><%= det.po_remark %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->


</div>