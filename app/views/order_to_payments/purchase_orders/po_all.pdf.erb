<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      PURCHASE ORDERS <br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %> ( Tanggal : <%= Time.new.strftime("%d-%m-%Y %H:%M:%S") %>)
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <table style="" cellspacing="0" cellpadding="0" >
                  <thead>
                    <tr>
                      <th>Ship To</th>
                      <th>PO Number</th>
                      <th>Ordered</th>
                      <th>Arrival</th>
                      <th>Order Type</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @results.each_with_index do |po, i| %>
                      <tr style="background: silver;">
                        <td><%=po.warehouse.warehouse_name rescue '' %></td>
                        <td><%=po.po_number%></td>
                        <td><%=convert_date(po.po_date)%></td>
                        <td><%=convert_date(po.due_date)%></td>
                        <td><%=po.order_type%></td>
                        <td><%=change_state_when_action_of_time(po)%></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->


</div>