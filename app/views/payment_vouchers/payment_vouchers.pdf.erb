<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      Payment Voucher <br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %>
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">

                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Voucher</span>
                        : <%=@result.voucher%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Last Update By</span>
                        : <%= "#{@result.user.first_name} #{@result.user.last_name}" %>
                      </li>
                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <table style="" cellspacing="0" cellpadding="0" >
                  <thead>
                    <tr>
                      <th class="center">Supplier Code</th>
                      <th class="center">Order Date</th>
                      <th class="center">Received Date</th>
                      <th class="center">Payment Invoice Due Date</th>
                      <th class="center">Invoice Number</th>
                      <th class="center">Grand Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @result_details.each_with_index do |detail, i| %>
                      <tr>
                        <td class="level"><%= detail.purchase_order.supplier.code rescue '' %></td>
                        <td class="level"><%= convert_date(detail.purchase_order.po_date) %></td>
                        <td class="level"><%= convert_date(detail.purchase_order.received_date) %></td>
                        <td class="level"><%= convert_date(detail.purchase_order.payment_invoice_due_date) %></td>
                        <td class="level"><%= detail.purchase_order.invoice_number %></td>
                        <td class="level text-right"><%= total_format(detail.purchase_order.charges_total, "Rp.") %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->
</div>
