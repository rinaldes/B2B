<%= form_tag search_pv_payments_path, :method => 'get', :remote => true, :id => "form_search_pv" do %>
  <fieldset>
    <div id="supplier-name"></div>
    <div class="control-group ui-widget">
        <label class="span2">Supplier</label>
        <%= text_field_tag "supplier_name_autocomplete", "", :class => "typeahead", :autocomplete => "off", :placeholder => "Select Supplier", :required=>"required", :onkeyup => "get_supplier_auto_complete(this)"%>
    </div>
	<div class="control-group">
	    <label class="span2">Filter</label>
	    <%= select("search", "field", ["Payment Voucher No"].collect{|arr| [arr] }) %>
	    <%= text_field_tag "search[detail]", params[:search_all], id:"search_detail", :autocomplete => "off" %>
	    <%= submit_tag :Find,:class=>"btn btn-info", :style=>"top:-5px;"%>
	</div>
  <div class="control-group ui-widget">
	    <label class="span2">Invoice ID</label>
	    <%= text_field_tag "invoice_id_autocomplete", "", :class => "typeahead", :autocomplete => "off", :placeholder => "Select Invoice", :onkeyup => "get_invoice_auto_complete(this)"%>
	</div>
  </fieldset>
<% end %>
<div class="row-fluid">
	<div class="span12">
	  <div id="table-pv" class="dataTables_wrapper"role="grid">
		<table class="table table-striped table-bordered table-hover" id="table-pv-results">
		  <thead>
		    <tr>
		      <th class="center">Voucher</th>
		      <th class="center">Supplier Code</th>
		      <th class="center">Received Date</th>
		      <th class="center">Total</th>
		      <th class="center">Status</class>
		      <th class="center">
		        <%= check_box_tag "select_all_pv","", false, :onclick=>"to_select_toggle(this)", :class=>"select-pv-second" %>
		        <span class="lbl"></span>
		      </th>
		    </tr>
		  </thead>
		  <tbody id="check_pv">
        <%= render 'result_payment_vouchers', :pv_results => pv_results %>
		  </tbody>
		</table>
		<div id="btn-add"></div>
		<div id="link-to-load"></div>
	  </div>
	</div>
</div>
