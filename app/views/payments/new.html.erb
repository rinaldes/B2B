<%=javascript_include_tag "payments.js"%>
<%=javascript_include_tag "autoNumeric-min.js"%>

<div class="row-fluid">
  <div class="span12">
    <div class="tabbable" id="tabs">
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#panel-pv" data-toggle="tab" id="pv">Select Payment Voucher</a>
        </li>
        <li>
          <a href="#panel-debit" data-toggle="tab" id="debit" onclick="get_search_dn(this)" class='disabled'>Add Debit Note</a>
        </li>
        <li>
          <a href="#panel-retur" data-toggle="tab" id="retur" onclick="get_search_retur(this)" class='disabled'>Add Returned Process</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="panel-pv">
          <div id="tab-voucher">
            <%= render "search_pv", :payment => @payment, :pv_results => @pv_results %>
          </div>
        </div>
        <div class="tab-pane" id="panel-debit">
          <div id="tab-debit">
            <%=render "search_dn", :payment => @payment%>
          </div>
        </div>
        <div class="tab-pane" id="panel-retur">
          <div id="tab-retur">
            <%=render "search_retur", :payment => @payment%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row-fluid " style="margin-top:20px;">
  <div class="span6 " id="payments-total">
    <%=render 'total_results', :payment => @payment %>
  </div>
</div>
<STYLE>
   .disabled { pointer-events: none; cursor: default; }
</STYLE>
