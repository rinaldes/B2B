<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      Payment Detail<br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %>
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">

                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>PO Number</span>
                        : <%=@grn.po_number%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>GRN Number</span>
                        : <%=@grn.grn_number %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Warehouse</span>
                        : <%=@grn.warehouse.try(:warehouse_name)%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Supplier Code</span>
                        : <%= @grn.supplier.code %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Supplier Name</span>
                        : <%= @grn.supplier.name %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Order Type</span>
                        : <%= @grn.order_type %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Ordered</span>
                        : <%=convert_date(@grn.po_date)%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Arrival</span>
                        : <%=convert_date(@grn.due_date)%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Received Date</span>
                        : <%=convert_date(@grn.received_date)%>
                      </li>
                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <div class="span12">
                  <table  cellspacing="0" cellpadding="0">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Process</th>
                      <th>Date</th>
                      <th>Time</th>
                      <th>Username</th>
                      <th>Remark</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @grn_disputed.each_with_index do |grn, i| %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><%= grn.grn_state_name.to_s == "rev" ? "Revision #{grn.revision_to}" : grn.grn_state_name.to_s.capitalize %></td>
                      <td><%= convert_date(grn.created_at) %></td>
                      <td><%= grn.created_at.to_datetime.new_offset(Rational(7,24)).strftime("%H:%M:%S") %></td>
                      <td><%= grn.user.username %></td>
                      <td><%= grn.po_remark %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                </div>
              </div>
              <div class="widget-header">
                <h5>Disputed Line</h5>
              </div>
              <div class="row-fluid">
                <table style="" cellspacing="0" cellpadding="0" >
                  <thead>
                    <tr>
                      <th>Seq</th>
                      <th>Item Code</th>
                      <th>Barcode</th>
                      <th>Item Description</th>
                      <!--th>Commited QTY</th-->
                      <th>Customer QTY</th>
                      <th>Disputed QTY</th>
                      <th>UoM</th>
                      <th>Remark</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @grn_details.each_with_index do |det, i| %>
                    <% if det.received_qty.to_i != det.dispute_qty.to_i %>
                      <tr style="background: silver;">
                    <% else %>
                      <tr>
                    <% end %>
                        <td><%= det.seq %></td>
                        <td><%= det.product.code %></td>
                        <td><%= det.product.apn_number %></td>
                        <td><%= det.product.name.html_safe %></td>
                        <!--td><%= det.commited_qty.to_i %></td-->
                        <td><%= det.received_qty.to_i %></td>
                        <td>
                          <%= det.remark.blank?? 0 : det.dispute_qty.to_i %>
                        </td>
                        <td><%= det.product.unit_qty %></td>
                        <td><%= det.remark.blank?? "-OK-" : det.remark %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->


</div>
