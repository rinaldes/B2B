<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      Detail Supplier Group<br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %>
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">
                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Item Code</span>
                        : <%=@product.code %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Item Desc</span>
                        : <%=@product.name.html_safe %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>APN Number</span>
                        : <%= @product.apn_number %>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Brand</span>
                        : <%= @product.brand %>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Unit Description</span>
                        : <%= @product.unit_description %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Convertion Factor</span>
                        : <%= @product.convertion_factor %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Pack Description</span>
                        : <%= @product.pack_description %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Pack Cubic Size</span>
                        : <%= @product.pack_cubic_size %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Pack Weight</span>
                        : <%= @product.pack_weight %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Import Tarif</span>
                        : <%= @product.import_tarif %>
                      </li>
                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <div class="span12">
                  <table  cellspacing="0" cellpadding="0">
                  <thead>
                    <tr>
                      <th class="center">Supplier Code</th>
                      <th class="center">Supplier Name</th>
                      <th class="center">Level</th>
                      <th class="center">Service Level</th>
                      <th class="center">Address</th>
                      <th class="center">Last Update</th>
                      <th class="center">Item Last Buy Price</th>
                    </tr>
                  </thead>
                  <tbody>
    <% if @suppliers %>
      <% @suppliers.each do |s| %>
        <tr>
          <td><%= s.supplier.code rescue '' %></td>
          <td><%= s.supplier.name rescue '' %></td>
          <td><%= s.supplier.level rescue '' %></td>
          <td><%= s.supplier.service_level rescue '' %></td>
          <td><%= s.supplier.addresses.pluck(:name).join(",") rescue '' %></td>
          <td><%= time_ago_in_words(s.supplier.updated_at) rescue '' %></td>
          <td class="text-right"><%= total_format(s.last_buy_price,"Rp.") %></td>
        </tr>
      <% end %>
      <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->
</div>
