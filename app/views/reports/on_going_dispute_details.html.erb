<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">
                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>PO Number</span>
                        : <%=@purchase_order.po_number%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <% if @purchase_order.order_type == GRN %>
                          <span>GRN Number</span>
                          : <%=@purchase_order.grn_number %>
                        <% else %>
                          <span>GRPC Number</span>
                          : <%=@purchase_order.grpc_number %>
                        <% end %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Order Type</span>
                        : <%= @purchase_order.order_type %>
                      </li>
                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <% if @purchase_order.order_type == GRN %>
                <%= render "detail_ongoing_disputes_grn", :dispute_details => @dispute_details %>
              <% else %>
                <%= render "detail_ongoing_disputes_grpc", :dispute_details => @dispute_details %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->


</div>