<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">

                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Invoice Number</span>
                        : <%=@retur.purchase_order.invoice_number%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Retur Number</span>
                        : <%=@retur.rp_number %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Order Type</span>
                        : <%= GRTN %>
                      </li>

                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->
              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="widget-header">
                <h5>Disputed Line</h5>
              </div>
              <div class="row-fluid">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>Seq</th>
                      <th>Item Code</th>
                      <th>Barcode</th>
                      <th>Item Description</th>
                      <th>Retur QTY</th>
                      <th>Received QTY</th>
                      <th>Received as Retur QTY</th>
                      <th>UoM</th>
                      <!--th>Item Price</th>
                      <th>Tax</th-->
                      <th>Remark</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @grtn_details.each_with_index do |det, i| %>
                      <tr>
                        <td><%= det.seq %></td>
                        <td><%= det.product.code %></td>
                        <td><%= det.product.apn_number %></td>
                        <td><%= det.product.name.split("<br/>").first %></td>
                        <td><%= det.return_qty.to_i %></td>
                        <td><%= det.received_qty.to_i %></td>
                        <td><%= det.received_as_retur_qty.to_i %></td>
                        <td><%= det.product.unit_description %></td>
                        <!--td><%#= total_format(det.item_price,"Rp.") %></td-->
                        <td><%= det.remark %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->


</div>