<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      Service Level Suppliers <br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %>
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="widget-header">
                <h5></h5>
              </div>
              <div class="row-fluid">
                <table style="" cellspacing="0" cellpadding="0" >
                  <thead>
                    <tr  style="background: gray;">
                      <th>Supplier Code</th>
                      <th>Supplier Name</th>
                      <th>Year</th>
                      <th>Month</th>
                      <th>Order No</th>
                      <th>Case Order</th>
                      <th>Line Order</th>
                      <th>On Time Delivery Order</th>
                      <th>Total Service Level</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @results.each_with_index do |sl, i| %>
                      <tr>
                        <td><%= sl.supplier.code %></td>
                        <td><%= sl.supplier.name %></td>
                        <td><%= sl.created_at.to_date.strftime("%B") %></td>
                        <td><%= sl.created_at.to_date.year %></td>
                        <td><%= sl.purchase_order.po_number %></td>
                        <td><%= service_level_percentation(sl.supplier_id, sl.purchase_order)[:sl_order_total].to_f.round(2) %>%</td>
                        <td><%= service_level_percentation(sl.supplier_id, sl.purchase_order)[:sl_line_total].to_f.round(2) %>%</td>
                        <td><%= service_level_percentation(sl.supplier_id, sl.purchase_order)[:sl_time_total].to_f.round(2) %>%</td>
                        <td><%= sl.total_sl.to_f %>%</td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->
</div>
</div>