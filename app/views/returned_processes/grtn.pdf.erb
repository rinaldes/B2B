<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      <%= RP %> <br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %>
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">

                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Invoice Number</span>
                        : <%=@retur.purchase_order.invoice_number%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Retur Number</span>
                        : <%=@retur.rp_number %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Warehouse</span>
                        : <%=@retur.purchase_order.warehouse.try(:warehouse_name)%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Supplier Code</span>
                        : <%= @retur.purchase_order.supplier.code %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Supplier Name</span>
                        : <%= @retur.purchase_order.supplier.name %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Order Type</span>
                        : <%= RP %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Backorder Flag</span>
                        : <%= @retur.purchase_order.backorder_flag %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Return Date</span>
                        : <%=convert_date(@retur.rp_date)%>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Arrival</span>
                        : <%=convert_date(@retur.purchase_order.due_date)%>
                      </li>
                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <div class="span12">
                  <table  cellspacing="0" cellpadding="0">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Process</th>
                      <th>Date</th>
                      <th>Time</th>
                      <th>Username</th>
                      <th>Remark</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @grtn_disputed.each_with_index do |ret, i| %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><%= ret.state_name.to_s == "rev" ? "Revision #{ret.revision_to}" : ret.state_name.to_s.capitalize %></td>
                      <td><%= convert_date(ret.created_at) %></td>
                      <td><%= ret.created_at.to_datetime.new_offset(Rational(7,24)).strftime("%H:%M:%S") %></td>
                      <td><%= ret.user.username %></td>
                      <td><%= ret.remark %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                </div>
              </div>
              <div class="widget-header">
                <h5>Disputed Line</h5>
              </div>
              <div class="row-fluid">
                <table style="" cellspacing="0" cellpadding="0" >
                  <thead>
                    <tr>
                      <th>Seq</th>
                      <th>Item Code</th>
                      <th>Barcode</th>
                      <th>Item Description</th>
                      <th>Retur QTY</th>
                      <th>Received QTY</th>
                      <th>Received as Retur QTY</th>
                      <th>UoM</th>
                      <!--th>Item Price</th>
                      <th>Tax</th-->
                      <th>Remark</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @grtn_details.each_with_index do |det, i| %>
                      <tr>
                        <td><%= det.seq %></td>
                        <td><%= det.product.code %></td>
                        <td><%= det.product.apn_number %></td>
                        <td><%= det.product.name.html_safe %></td>
                        <td><%= det.return_qty.to_i %></td>
                        <td><%= det.received_qty.to_i %></td>
                        <td><%= det.received_as_retur_qty.to_i %></td>
                        <td><%= det.product.unit_description %></td>
                        <!--td><%#= total_format(det.item_price,"Rp.") %></td-->
                        <td><%= det.remark %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->


</div>