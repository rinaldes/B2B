<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      RETURNED PROCESSES (GRTN) <br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %> ( Tanggal : <%= Time.new.strftime("%d-%m-%Y %H:%M:%S") %>)
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <table style="" cellspacing="0" cellpadding="0" >
                  <thead>
                    <tr>
                      <th>Return From</th>
                      <th>Return Number</th>
                      <th>Order Number</th>
                      <th>Invoice Number</th>
                      <th>Type</th>
                      <th>Backorder Flag</th>
                      <th>Status</th>  
                    </tr>
                  </thead>
                  <tbody>
                    <% @results.each_with_index do |rp, i| %>
                      <tr style="background: silver;">
                        <td><%=rp.try(:purchase_order).try(:supplier).try(:name)%></td>
                        <td><%=rp.rp_number%></td>
                        <td><%=rp.try(:purchase_order).try(:po_number)%></td>
                        <td><%= rp.try(:purchase_order).invoice_number %></td>
                        <td><%= GRTN %></td>
                        <td><%= rp.try(:purchase_order).try(:backorder_flag) %></td>
                        <td><%= nil_to_unread(rp) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->


</div>