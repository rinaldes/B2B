<div id="update_limit_date">
  	<%= form_for @api_setting, url: setting_api_settings_path, :method => :post, :html => {:class => 'form-horizontal'} do |f| %>
  		<div class="well">
		      <fieldset>
		        	<div class="control-group">
		          		<label class="control-label"  for="Title">API URL</label>
		          		<div class="controls">
		            			<%= f.text_field :api, :class => "input-xlarge form-control input-lg span3 input_limit_date"  %>
		            			<span class="help-block red alert_notice"><%= @api_setting.errors[:api].join() %></span>
		          		</div>
		        	</div>
		        	<div class="control-group">
				      	<label class="control-label"  for="Title">Key Header</label>
				      	<div class="controls">
				            	<%= f.text_field :password, :class => "input-xlarge form-control input-lg span3 input_limit_date"  %>
				      		<span class="help-block red alert_notice"><%= @api_setting.errors[:api].join() %></span>
				      	</div>
				</div>
				<div class="control-group">
				      	<!-- Button -->
				      	<div class="controls">
				      		<%= f.button raw('Save<i class="icon-arrow-right icon-on-right"></i>'), :class => "btn btn-small btn-success btn-register-span5" %>
				      	</div>
			      	</div>
		        </fieldset>
		</div>
  	<% end %>
</div>