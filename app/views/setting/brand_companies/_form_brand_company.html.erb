<% if params[:action] == "new" || params[:action] == "create"
	path = setting_brand_companies_path
	method = "POST"
elsif params[:action] == "edit" || params[:action] == "update"
	path = setting_brand_company_path(brand_company)
	method = "PUT"
end%>

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	<h3 id="myModalLabel">Change Company Name</h3>
</div>

<div class="modal-body">
	<%= form_for :brand_company, url: path, method: method, :html => {:id => "change_brand_form", :class => 'form-horizontal', :onsubmit => "return get_change_brand('#{method}')"} do |f| %>
	<fieldset>
		<div class="control-group">
			<label class="control-label"  for="Title">Name</label>
			<div class="controls">
				<%= f.text_field :name, :id => "name" %>
			</div>
			<br>
			<label class="control-label"  for="Title">Brand</label>
			<div class="controls">
				<%= f.text_field :brand_tmp, :id => "brand" %>
			</div>
		</div>
		<div class="control-group">
			<!-- Button -->
			<div class="controls">
				<div class="row-fluid">
					<div class='pull-left' style='margin-left: 8px;'>
						<%= f.button raw('Save<i class="icon-arrow-right icon-on-right"></i>
						'), :class => "btn btn-small btn-success btn-register-span5" %>
					</div>
				</div>
			</div>
		</div>
	</fieldset>
	<% end %>
</div>
