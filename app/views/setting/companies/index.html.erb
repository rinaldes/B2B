<% if can? :read, :company %>
  <div class="row-fluid">
    <!--PAGE CONTENT BEGINS HERE-->
    <div class="space-6"></div>
      <div class="row-fluid">
      <div class="span12">
        <div class="widget-box transparent invoice-box">
        <%unless !@company.nil?%>
          <div class="widget-header widget-header-large">
            <h5 class="grey lighter pull-left position-relative">
              <span>No Company Profile yet, Create one    </span>
              <%if can?(:create, Company)%>
                <%=link_to "<i class='icon-plus'> </i> Create".html_safe, new_setting_company_path, :class=>'btn btn-success btn-small'%>
              <%end%>
            </h5>
          </div>
        <%else%>
          <div class="widget-header widget-header-large">
            <h3 class="grey lighter pull-left position-relative">
              <i class="icon-plane"></i>
              Company Profile
            </h3>
            <%if can?(:edit, @company)%>
              <%=link_to "<i class='icon-edit'> </i>Edit".html_safe, edit_setting_company_path(@company.id), :class=>"btn btn-info pull-right"%>
            <%end%>
          </div>
          <div class="widget-body">
            <div class="widget-main padding-24">
              <div class="row-fluid">
                <div class="row-fluid">
                  <div class="span6">
                    <div class="row-fluid">
                      <ul class="unstyled spaced">
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Company Logo</span>
                          : <%= show_image_logo(@company, "thumb") %>
                        </li>
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Company Name</span>
                          : <%=@company.name%>
                        </li>
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Tax No</span>
                          : <%=@company.npwp%>
                        </li>
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Brand</span>
                          : <%=@company.brand_tmp %>
                        </li>
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>HQ Address</span>
                          : <%=@company.addresses.first.office_address rescue "-" %>
                        </li>
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Phone</span>
                          : <%=@company.addresses.first.phone rescue "-" %>
                        </li>
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Fax</span>
                          : <%=@company.addresses.first.fax_no rescue "-" %>
                        </li>
                        <li>
                          <i class="icon-caret-right blue"></i>
                          <span>Website</span>
                          : <%=@company.addresses.first.website rescue "-" %>
                        </li>
                      </ul>
                    </div>
                  </div><!--/span-->
                </div><!--row-->
            </div>
          </div>
        </div>
        <%end%>
      </div>
    </div>
    <!--PAGE CONTENT ENDS HERE-->
  </div><!--/row-->
<% end %>
