<%= form_for @image_blast, url: setting_image_blasts_path, :method => :post, :html => {:class => 'form-horizontal', multipart: true} do |f| %>
<div class="well">
  <fieldset>
    <div class="control-group">
      <div class="controls">
        <%= f.label :front_img %>  
        <%= f.file_field :front_img %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
          <%= f.label :title %>
        <%= f.text_field :title, :class => "input-xlarge form-control input-lg span6 txt-type-of-user-company" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
          <%= f.label :description %>
        <%= f.text_field :description, :class => "input-xlarge form-control input-lg span6 txt-type-of-user-company" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
          <%= f.label :valid_from %>
        <%= f.text_field :valid_from, :class => "input-xlarge form-control input-lg span6 txt-type-of-user-company" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
          <%= f.label :valid_until %>
        <%= f.text_field :valid_until, :class => "input-xlarge form-control input-lg span6 txt-type-of-user-company" %>
      </div>
    </div>
    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <%= f.button raw('Save<i class="icon-arrow-right icon-on-right"></i>
              '), :class => "btn btn-small btn-success btn-register-span5" %>
        <%= link_to raw('Cancel<i class="icon-arrow-left icon-on-right"></i>
              '), setting_image_blasts_path, :class => "btn btn-small btn-pink btn-register-span5" %>
      </div>
    </div>
  </fieldset>
  </div>
<%end%>

<script>
$(document).ready(function(){
  $('#image_blast_valid_from').datepicker({
      format : "yyyy-mm-dd",
      autoclose : true
  });
  $('#image_blast_valid_until').datepicker({
      format : "yyyy-mm-dd",
      autoclose : true
  });
})
</script>