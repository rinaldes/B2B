<div id="update_limit_date">
  <%= form_for :level_limit, url: setting_level_limits_url, :remote => true, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="well">
    <fieldset>
      <% level_limits.each_with_index do |ll, i| %>
        <div class="control-group">
          <label class="control-label"  for="Title"><%= ll.level_type %></label>
          <div class="controls">
            <%= text_field_tag "limit_date[#{ll.id}]", ll.limit_date, :class => "input-xlarge form-control input-lg span3 input_limit_date"  %>
            <p>-------------------------------------------------------------------------</p>
            <p>
              <%= txt_email_address(ll) %>
            </p>
            <span class="help-block red alert_notice">dsf</span>
          </div>
        </div>
      <% end %>
      <div class="control-group">
        <!-- Button -->
        <div class="controls">
          <%= f.button raw('Save<i class="icon-arrow-right icon-on-right"></i>
                '), :class => "btn btn-small btn-success btn-register-span5" %>
        </div>
      </div>
    </fieldset>
    </div>
    <%= f.hidden_field :supplier_id, :value => params[:supplier_id] %>
  <%end%>
</div>