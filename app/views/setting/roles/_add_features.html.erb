<%if can? :update_features, :role%>
  <div class="row-fluid">
    <div class="span12 well">
      <% unless current_user.has_role? :superadmin && role.name == "superadmin" %>
        <%= form_for role, url: update_features_setting_roles_path(role.id), :html => {:class => ''} do |f| %>
          <h4>Master</h4>
          <div class="row-fluid">
            <ul class="">
              <li class="span4">
                <%=raw(display_role_features("Dashboard"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Supplier"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Product"))%>
              </li>
            </ul>
          </div>
          <div class="space"></div>
          <div class="row-fluid">
            <ul class="">
              <li class="span4">
                <%=raw(display_role_features("Warehouse"))%>
              </li>
            </ul>
          </div>
          <hr>
          <h4>Order to Payment</h4>
          <div class="row-fluid">
            <ul class="">
              <li class="span4">
                <%=raw(display_role_features("Purchase Order"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Advance Shipment Notification"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Goods Receive Note"))%>
              </li>
            </ul>
          </div>
          <div class="space"></div>
          <div class="row-fluid">
            <ul class="">
              <li class="span4">
                <%=raw(display_role_features("Goods Receive Price Confirmation"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Invoice"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Debit Note"))%>
              </li>
            </ul>
          </div>
          <div class="space"></div>
          <div class="row-fluid">
            <ul class="">
              <li class="span4">
                <%=raw(display_role_features("Payment Voucher"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Payment"))%>
              </li>
              <li class="span4">
                <%=raw(display_role_features("Returned Proces"))%>
              </li>
            </ul>
          </div>
          <div class="space"></div>
          <div class="row-fluid">
            <ul class="">
              <li class="span4">
                <%=raw(display_role_features("Early Payment Request"))%>
              </li>
               <li class="span4">
                  <%=raw(display_role_features("Notification"))%>
                </li>
            </ul>
          </div>
          <div class="space"></div>
          <hr>
          <%#if role.name == "superadmin" || role.group_flag %>
            <h4>Setting</h4>
            <div class="row-fluid">
              <ul class="">
                <li class="span4">
                  <%=raw(display_role_features("User"))%>
                </li>
                <li class="span4">
                  <%=raw(display_role_features("Type Of User"))%>
                </li>
                <li class="span4">
                  <%=raw(display_role_features("Role"))%>
                </li>
              </ul>
            </div>
            <div class="space"></div>
            <div class="row-fluid">
              <ul class="">
                <li class="span4">
                  <%=raw(display_role_features("Company"))%>
                </li>
                <li class="span4">
                  <%=raw(display_role_features("Email Notification"))%>
                </li>
              </ul>
            </div>
            <div class="space"></div>
            <div class="row-fluid">
              <ul class="">
                <li class="span4">
                  <%=raw(display_role_features("Ldap Setting"))%>
                </li>
                <li class="span4">
                  <%=raw(display_role_features("Service Level"))%>
                </li>
                <li class="span4">
                  <%=raw(display_role_features("User Log"))%>
                </li>
              </ul>
            </div>
          <%# end %>
          <h4>Report</h4>
          <div class="row-fluid">
            <ul class="">
              <li class="span4">
                <%=raw(display_role_features("Report"))%>
              </li>
            </ul>
          </div>
          <div class="space"></div>
          <div class="row-fluid">
            <div class="span2 pull-left">
              <%= f.button raw('Save<i class="icon-arrow-right icon-on-right"></i>
              '), :class => "btn btn-small btn-success btn-register-span1" %>
            </div>
          </div>
        <%end%>
      <% else %>
        <div class="row-fluid text-center">
          Grant All Privileges of Features
        </div>
      <% end %>
    </div>
  </div>
<%end%>
