<div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
    <div class="row-fluid">
    <div class="span12">
      <div class="widget-box transparent invoice-box">
      <%unless !@service.nil?%>
        <div class="widget-header widget-header-large">
          <h5 class="grey lighter pull-left position-relative">
            <span>Default Schedule is every 1 hours    </span>
            <%if can?(:create, Company)%>
              <%=link_to "<i class='icon-plus'> </i> Create".html_safe, new_setting_service_scheduler_api_path, :class=>'btn btn-success btn-small'%>
            <%end%>
          </h5>
        </div>
      <%else%>
        <div class="widget-header widget-header-large">
          <h3 class="grey lighter pull-left position-relative">
            <i class="icon-plane"></i>
            Schedule Sync Time
          </h3>
          <%if can?(:edit, @service)%>
            <%=link_to "<i class='icon-edit'> </i>Edit".html_safe, edit_setting_service_scheduler_api_path(@service.id), :class=>"btn btn-info pull-right"%>
          <%end%>
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">
                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Time</span>
                        : <%= @service.set_time %>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Type Time</span>
                        : <%= display_time_type(@service.type_time)%>
                      </li>
                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->
          </div>
        </div>
      </div>
      <%end%>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->
