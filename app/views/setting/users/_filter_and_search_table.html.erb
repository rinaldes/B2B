<%= form_tag "#{find_path_supplier_or_warehouse(params[:action], params[:id], 'supplier')}", :method => 'get', :remote => true, :id => "form_search_supplier" do %>
<div class="table-header">
  <div class="site">
    <label>Filter</label>
    <% filter_arr = ["Name", "Code"] %>
    <%= select("search", "field", filter_arr.collect{|arr| [arr] }) %>
  </div>
  <div class="default">
    <%= text_field_tag "search[detail]", params[:search_all] %>
   <button class="btn btn-small  btn-info pull-left" type="button" id="find-supplier" name="<%= params[:id] %>" from="<%= params[:action] %>">Find</button>
    <a href="#"><i class="icon-refresh"></i></a>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</div>
<%end%>

