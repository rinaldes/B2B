<div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
          <h3 class="grey lighter pull-left position-relative">
            <i class="icon-user green"></i>
            Detail User
          </h3>
        </div>

        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="span6">
                <div class="row-fluid">
                  <ul class="unstyled spaced">
                    <li>
                      <i class="icon-caret-right blue"></i>
                      <span>Email</span>
                      : <strong><%= @user.email %></strong>
                    </li>

                    <li>
                      <i class="icon-caret-right blue"></i>
                      <span>Username</span>
                      : <strong><%= @user.username %></strong>
                    </li>

                    <li>
                      <i class="icon-caret-right blue"></i>
                      <span>First Name</span>
                      : <strong><%= @user.first_name %></strong>
                    </li>

                    <li>
                      <i class="icon-caret-right blue"></i>
                      <span>Last Name</span>
                      : <strong><%= @user.last_name %></strong>
                    </li>

                    <li>
                      <i class="icon-caret-right blue"></i>
                      <span>Roles</span>
                      : <strong><%= @user.try(:roles).pluck(:name).join(", ") %></strong>
                    </li>
                    <%= show_data_supplier_or_warehouse(@user) %>
                    <% if @user.warehouse.present? || @user.supplier.present? %>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Status</span>
                        : <strong><%= @user.is_activated ? 'Activated' : 'Unactivated' %></strong>
                      </li>
                      <li>
                        <span><strong>Receive Email Notification</strong></span>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span><%=PO%></span>
                        : <strong><%= @user.is_received_po %></strong>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span><%=GRN%></span>
                        : <strong><%= @user.is_received_grn %></strong>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span><%=GRPC%></span>
                        : <strong><%= @user.is_received_grpc %></strong>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span><%=INV%></span>
                        : <strong><%= @user.is_received_invoice %></strong>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span><%=GRTN%></span>
                        : <strong><%= @user.is_received_grtn %></strong>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Early Payment Request</span>
                        : <strong><%= @user.is_received_early_payment_request %></strong>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span><%=DN%></span>
                        : <strong><%= @user.is_received_debit_note %></strong>
                      </li>
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Early Payment Voucher</span>
                        : <strong><%= @user.is_received_payment_voucher %></strong>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div><!--/span-->
            </div><!--row-->
            <div class="space"></div>
            <%= active_non_active_user(@user) %>
            <%= get_button_feature_by_user(@user) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->
