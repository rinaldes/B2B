
									<div id="signup-box" class="widget-box no-border visible">
										<div class="widget-body">
											<div class="widget-main">
												<h4 class="header green lighter bigger">
													<i class="icon-lock blue"></i>
													New Password
												</h4>
												<div class="space-6"></div>
												<p>
													Please fill empty fields below
												</p>
													<fieldset>
														<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
		  												<%= raw(show_error_validation(resource))%>

		  												<%= f.hidden_field :reset_password_token %>
														<label>
															<span class="block input-icon input-icon-right">
																 <%= f.password_field :password, :autofocus => true, class: "span12", placeholder: "your new password" %>
																<i class="icon-envelope"></i>
															</span>
														</label>
														<label>
															<span class="block input-icon input-icon-right">
																<%= f.password_field :password_confirmation, class:"span12", placeholder: "confirm your new password" %>
																<i class="icon-envelope"></i>
															</span>
														</label>
														<div class="space-24"></div>
  														<div class="row-fluid">
															<%= f.submit "Change my password  ", class: "span6 btn btn-small btn-success"  %>
														</div>
													<% end %>
													</fieldset>
											</div>
											<div class="toolbar center">
												<%=link_to "<i class='icon-arrow-right'></i>Back to login".html_safe, new_user_session_path%>
											</div>
										</div><!--/widget-body-->
									</div><!--/signup-box-->