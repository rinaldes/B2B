<div id="login-box" class="visible widget-box no-border">
	<div class="widget-body">
		<div class="widget-main">
			<h4 class="header blue lighter bigger">
				Please Enter Your Information
			</h4>
			<span class="red">
				<% unless params[:login].blank? %>
					<b>This Account is already in use by another user.</b>
				<% end %>
				<%= flash[:alert] %>
				<%= flash[:show_warning_ldap] %>
			</span>
			<div class="space-6"></div>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<fieldset>
					<label>
						<span class="block input-icon input-icon-right">
							<%= f.text_field :login, :class => "span12", :placeholder => "Username" %>
							<i class="icon-user"></i>
						</span>
					</label>

					<label>
						<span class="block input-icon input-icon-right">
							<%= f.password_field :password, :class => "span12", :placeholder => "Password" %>
							<i class="icon-lock"></i>
						</span>
					</label>
					<div class="space"></div>
					<div class="row-fluid">
						<label class="span8">
							<%# if devise_mapping.rememberable? -%>
								<%#= f.check_box :remember_me, {}, true, false %> <!--span class="lbl"> Remember Me</span-->
							<%# end -%>
						</label>
						<%= f.button raw('<i class="icon-key"></i> Login'), :class => "span4 btn btn-small btn-primary" %>
					</div>
				</fieldset>
			<% end %>
		</div><!--/widget-main-->
		<!--<div class="toolbar center forgot-password-link ">-->
 		  <%#= link_to "<span class='white bolder'>I forgot my password?</span>".html_safe, new_user_password_path, :class=>"btn btn-small btn-grey"%>
		<!--</div>-->
	</div><!--/widget-body-->
</div><!--/login-box-->