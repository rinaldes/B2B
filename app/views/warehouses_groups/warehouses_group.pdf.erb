<%= wicked_pdf_stylesheet_link_tag "style" %>
<div class="document">
  <div class="row-fluid">
  <!--PAGE CONTENT BEGINS HERE-->
  <div class="space-6"></div>
  <div class="row-fluid">
    <h2 class="grey lighter position-relative" align="center">
      Detail Supplier Group<br/>
    </h2>
    <h4 class="grey lighter position-relative" align="center">
      <%= @my_company.name %>
    </h4>
    <div class="span12">
      <div class="widget-box transparent invoice-box">
        <div class="widget-header widget-header-large">
        </div>
        <div class="widget-body">
          <div class="widget-main padding-24">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span6">
                  <div class="row-fluid">
                    <ul class="unstyled spaced">
                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Code</span>
                        : <%=@group.code %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Name</span>
                        : <%=@group.name %>
                      </li>

                      <li>
                        <i class="icon-caret-right blue"></i>
                        <span>Last Update</span>
                        : <%= convert_date @group.updated_at %>
                      </li>
                    </ul>
                  </div>
                </div><!--/span-->
              </div><!--row-->

              <div class="space"></div>
              <div class="hr-double"></div>
              <div class="space"></div>
              <div class="row-fluid">
                <div class="span12">
                  <table  cellspacing="0" cellpadding="0">
                  <thead>
                    <tr>
                      <th class="center">Code</th>
                      <th class="center">Name</th>
                      <th class="center">Last Update</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @results.each_with_index do |supplier, i| %>
                      <tr id="row_<%=supplier.id%>">
                        <td><%=supplier.warehouse_code%></td>
                        <td><%=supplier.warehouse_name%></td>
                        <td class="last-update"><%= time_ago_in_words(supplier.updated_at)%> ago</td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--PAGE CONTENT ENDS HERE-->
</div><!--/row-->
</div>
